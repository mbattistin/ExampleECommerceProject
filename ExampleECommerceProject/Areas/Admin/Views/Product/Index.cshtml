@model List<ExampleECommerceProject.Models.Models.Product>
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Product List</h2>
		</div>
		<div class="col-6" style="text-align: right;align-self: center;">
			<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create
			</a>
		</div>
	</div>
	<div>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Book Title</th>
					<th>Author</th>
					<th>ISBN</th>
					<th>Price</th>
					<th width="200px"></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var product in Model)
				{
					<tr>
						<td>@product.Title</td>
						<td>@product.Author</td>
						<td>@product.ISBN</td>
						<td>@product.Price</td>
						<td align="center">
							<a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary mr-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">
								<i class="bi bi-trash"></i> Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
