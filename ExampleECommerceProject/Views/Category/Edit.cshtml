@model Category
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
		</div>
		<div class="row p-1">
			<label class="p-1">Category Name:</label>
			<input asp-for="Name" type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="row p-1">
			<label class="p-1">Display Order:</label>
			<input asp-for="DisplayOrder" type="number" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<div class="row">
			<div class="col-6 p-1">
				<button type="submit" class="btn btn-primary form-control"><i class="bi bi-clipboard2-check"></i> Edit</button>
			</div>
			<div class="col-6 p-1">
				<a asp-controller="Category" asp-action="Index" class="btn btn-secondary  form-control"><i class="bi bi-x-circle"> </i> Cancel</a>
			</div>
		</div>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
	}