@model Category
<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Category</h2>
		</div>
		<div class="row p-1">
			<label class="p-1">Category Name:</label>
			<input asp-for="Name" disabled type="text" class="form-control" />
		</div>
		<div class="row p-1">
			<label class="p-1">Display Order:</label>
			<input asp-for="DisplayOrder" disabled type="number" class="form-control" />
		</div>
		<div class="row">
			<div class="col-6 p-1">
				<button type="submit" class="btn btn-danger form-control"><i class="bi bi-trash"></i> Delete</button>
			</div>
			<div class="col-6 p-1">
				<a asp-controller="Category" asp-action="Index" class="btn btn-secondary  form-control"><i class="bi bi-x-circle"></i> Cancel</a>
			</div>
		</div>
	</div>
</form>
