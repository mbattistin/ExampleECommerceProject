@model List<Category>
<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6" style="text-align: right;align-self: center;">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create
			</a>
		</div>
	</div>
	<div>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>Category Name</th>
					<th>Display Order</th>
					<th width="200px"></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var category in Model)
				{
					<tr>
						<td>@category.Name</td>
						<td>@category.DisplayOrder</td>
						<td align="center">
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary mr-2">
								<i class="bi bi-pencil-square"></i> Edit
							</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">
								<i class="bi bi-trash"></i> Delete
							</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
